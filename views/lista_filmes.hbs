<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" >
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark"  >
        <a class="navbar-brand" href="#">Filmes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#conteudoNavbarSuportado" aria-controls="conteudoNavbarSuportado" aria-expanded="false" aria-label="Alterna navegação">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="conteudoNavbarSuportado">
            <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/filmes">Adicionar<span class="sr-only"></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Categorias</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Registro</a>
            </li>
            </ul>
            
        </div>
    </nav>
</head>
<body>
    <h1>{{titulo}}</h1>
    <hr>
    <a href="/filmes"><button class="btn btn-success">Adicionar Filme</button></a> <hr>
    <div>
        <ul>
            {{#if listaExiste}}
            {{#each lista}}
            <div class="card">
                <br>
                Filme: {{this.filme}}<br>
                Usuário: {{this.usuario}}<br>
                Id: {{this._id}}
                {{!-- <a href="/delete">deletar</a><br/> --}}
                <form action="/listafilmes/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type='submit' class='btn btn-danger mt-2'>Excluir</button>
            </form>
            </div> <br>
            {{/each}}
            {{else}}
                <li>Filme: {{lista.filme}} {{lista.filme}}</li>
                <li>Usuário: {{lista.usuario}}</li> <br/>
            {{/if}}
        </ul>
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
